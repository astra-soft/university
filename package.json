{
	"name": "university",
	"version": "0.0.0",
	"description": "Backend server for the University project using Bun.",
	"main": "server.js",
	"scripts": {
		"build": "tsc",
		"start": "bun run start:prod",
		"start:prod": "cross-env NODE_ENV=production bun run dist/server.js",
		"start:dev": "cross-env NODE_ENV=development bun run --watch src/server.ts",
		"start:debug": "cross-env NODE_ENV=debug bun run src/server.ts --watch --inspect",
		"clean": "rm -rf dist",
		"lint": "eslint . --ext .ts",
		"test": "bun test",
		"type-check": "tsc --noEmit"
	},
	"keywords": [
		"koa",
		"typescript",
		"bun",
		"university"
	],
	"author": "Dmytro Shakh <dmytro.4or.work@gmail.com> (https://github.com/chyvacheck)",
	"license": "SEE LICENSE IN LICENSE",
	"dependencies": {
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv-flow": "^4.1.0",
		"koa": "^2.15.3",
		"koa-body": "^6.0.1",
		"module-alias": "^2.2.3",
		"mongoose": "^8.9.3",
		"reflect-metadata": "^0.2.2"
	},
	"devDependencies": {
		"@koa/router": "^13.1.0",
		"@types/koa": "^2.15.0",
		"@types/koa__router": "^12.0.4",
		"@types/node": "^22.10.3",
		"cross-env": "^7.0.3",
		"typescript": "^5.7.2"
	}
}
